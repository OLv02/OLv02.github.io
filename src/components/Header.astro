---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
import ThemeToggle from './ThemeToggle.astro';
---

<header class="site-header">
	<nav>
		<div class="header-nav--modern">
			<div class="site-nav site-nav--modern">
				<div class="site-nav__left">
					<HeaderLink href="/" class="site-logo-link" suppressActive>
						<img
							src={`${import.meta.env.BASE_URL}images/modern-site-logo.png`}
							alt=""
							class="site-logo site-logo--modern"
							width="48"
							height="48"
						/>
						<span class="sr-only">{SITE_TITLE}</span>
					</HeaderLink>
				</div>
				<div class="site-nav__center internal-links">
					<span class="nav-bracket nav-bracket-start" aria-hidden="true">[</span>
					<HeaderLink href="/">Home</HeaderLink>
					<HeaderLink href="/blog">Blog</HeaderLink>
					<HeaderLink href="/about">About</HeaderLink>
					<span class="nav-bracket nav-bracket-end" aria-hidden="true">]</span>
				</div>
				<div class="site-nav__right">
					<ThemeToggle />
				</div>
			</div>
		</div>
		<div class="header-nav--retro">
			<nav class="retro-inline-nav retro-nav-inline" aria-label="Site">
				<HeaderLink href="/">Home</HeaderLink>
				<span class="retro-inline-nav__sep" aria-hidden="true">/</span>
				<HeaderLink href="/blog">Blog</HeaderLink>
				<span class="retro-inline-nav__sep" aria-hidden="true">/</span>
				<HeaderLink href="/about">About</HeaderLink>
				<span class="retro-inline-nav__sep" aria-hidden="true">/</span>
				<button
					type="button"
					class="retro-inline-nav__theme"
					data-theme-set="modern"
				>
					Modern Theme
				</button>
			</nav>
			<HeaderLink href="/" class="site-logo-link" aria-label={`${SITE_TITLE} home`}>
				<img
					src={`${import.meta.env.BASE_URL}images/site-logo.gif`}
					alt={`${SITE_TITLE} logo`}
					class="site-logo site-logo--retro"
					width="200"
					height="200"
				/>
			</HeaderLink>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.nav-bracket {
		display: none;
	}
	.header-nav--retro {
		display: none;
	}
</style>
