---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
import ThemeToggle from './ThemeToggle.astro';
---

<header class="site-header">
	<nav>
		<div class="header-nav--modern">
			<div class="site-nav site-nav--modern">
				<div class="site-nav__left">
					<HeaderLink href="/" class="site-logo-link" suppressActive>
						<img
							src={`${import.meta.env.BASE_URL}images/modern-site-logo.png`}
							alt=""
							class="site-logo site-logo--modern"
							width="48"
							height="48"
						/>
						<span class="sr-only">{SITE_TITLE}</span>
					</HeaderLink>
				</div>
				<div class="site-nav__center internal-links">
					<span class="nav-bracket nav-bracket-start" aria-hidden="true">[</span>
					<HeaderLink href="/">Home</HeaderLink>
					<HeaderLink href="/blog">Blog</HeaderLink>
					<HeaderLink href="/about">About</HeaderLink>
					<span class="nav-bracket nav-bracket-end" aria-hidden="true">]</span>
				</div>
				<div class="site-nav__right">
					<ThemeToggle />
				</div>
			</div>
		</div>
		<div class="header-nav--retro">
			<HeaderLink href="/" class="site-logo-link" aria-label={`${SITE_TITLE} home`}>
				<img
					src={`${import.meta.env.BASE_URL}images/site-logo.gif`}
					alt={`${SITE_TITLE} logo`}
					class="site-logo site-logo--retro"
					width="240"
					height="240"
				/>
			</HeaderLink>
			<details class="retro-site-map" id="retro-site-map">
				<summary class="retro-site-map__summary">[ Site Map ]</summary>
				<nav class="retro-site-map__nav" aria-label="Site Map">
					<ul class="retro-site-map__list retro-sitemap-row">
						<li>
							<HeaderLink href="/">Home</HeaderLink>
							<span class="retro-sep" aria-hidden="true"> / </span>
						</li>
						<li>
							<HeaderLink href="/blog">Blog</HeaderLink>
							<span class="retro-sep" aria-hidden="true"> / </span>
						</li>
						<li>
							<HeaderLink href="/about">About</HeaderLink>
							<span class="retro-sep" aria-hidden="true"> / </span>
						</li>
						<li>
							<ThemeToggle variant="link" />
						</li>
					</ul>
				</nav>
			</details>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.nav-bracket {
		display: none;
	}
	.header-nav--retro {
		display: none;
	}
</style>
<script is:inline>
	(() => {
		const details = document.getElementById('retro-site-map');
		if (!details) return;
		const storageKey = 'retro-site-map-open';
		if (sessionStorage.getItem(storageKey) === '1') {
			details.open = true;
		}
		details.addEventListener('toggle', () => {
			if (details.open) {
				sessionStorage.setItem(storageKey, '1');
			} else {
				sessionStorage.removeItem(storageKey);
			}
		});
	})();
</script>
